{
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "lib": [
            "es6",
            "DOM",
        ],
        "declaration": true,
        "removeComments": false,
        "stripInternal": true,
        "sourceMap": true,
        // since 2.3
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "outFile": "./out/index.js",
        "sourceRoot": "./src/",
        "rootDir": "./src/",
    },
    "files": [
        "./src/index.ts"
    ]
}